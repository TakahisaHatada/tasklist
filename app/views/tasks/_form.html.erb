<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
   <div id="error_explanation">
     <ul>
       <% task.errors.full+task.each do |task| %>
         <li><%= task %></li>
       <% end %>
     </ul>
   </div>
  <% end %>
  
  <% end %>
  
  <%= f.label :status, 'スタッツ' %>
  <%= f.text_field :status %>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿' %>
<% end %>  